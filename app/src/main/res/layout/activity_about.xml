<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.about">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="20dp"
      android:orientation="vertical">

      <TextView
          android:layout_gravity="center_horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Title"
          android:text="Water Sector Trust Fund in Kenya"/>

      <ImageView
          android:layout_marginTop="10dp"
          android:layout_gravity="center_horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/logo_wstf"/>

      <TextView
          android:layout_marginTop="20dp"
          android:layout_width="300dp"
          android:gravity="center_vertical"
          android:background="#E1F5FE"
          android:layout_marginLeft="20dp"
          android:layout_height="40dp"
          style="@style/SubTitleblack"
          android:text=" Introduction"/>
      <TextView
          android:layout_marginTop="10dp"
          android:padding="10dp"
          android:background="#E1F5FE"
          android:layout_marginLeft="20dp"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          style="@style/Contentblack"
          android:text="@string/about"/>
      <TextView
          android:id="@+id/website"
          android:onClick="openwebsite"
          android:layout_marginTop="10dp"
          android:layout_width="300dp"
          android:background="#E1F5FE"
          android:layout_marginLeft="20dp"
          android:layout_height="40dp"
          style="@style/SubTitleblack"
          android:gravity="center_vertical"
          android:text=" Visit our website                                                >"/>
      <TextView
          android:id="@+id/team"
          android:onClick="openwebsite2"
          android:layout_marginTop="10dp"
          android:layout_width="300dp"
          android:background="#E1F5FE"
          android:layout_marginLeft="20dp"
          style="@style/SubTitleblack"
          android:gravity="center_vertical"
          android:layout_height="40dp"
          android:text=" Our management team                                   >"/>


  </LinearLayout>
</android.support.constraint.ConstraintLayout>
